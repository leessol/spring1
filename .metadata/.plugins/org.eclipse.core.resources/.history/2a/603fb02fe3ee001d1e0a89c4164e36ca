package com.shinhan.education;

import org.aopalliance.intercept.MethodInterceptor; //?´ê²? aroundë¥? ê°™ì? ?˜ë¯? 
import org.aopalliance.intercept.MethodInvocation;
import org.aspectj.lang.JoinPoint;
import org.aspectj.lang.ProceedingJoinPoint;
import org.aspectj.lang.annotation.After;
import org.aspectj.lang.annotation.AfterReturning;
import org.aspectj.lang.annotation.AfterThrowing;
import org.aspectj.lang.annotation.Around;
import org.aspectj.lang.annotation.Aspect;
import org.aspectj.lang.annotation.Before;
import org.aspectj.lang.annotation.Pointcut;
import org.springframework.core.annotation.Order;
import org.springframework.stereotype.Component;
import org.springframework.util.StopWatch;

@Component
@Aspect
@Order(2)
public class StopWatchAdvice {

	// pointcut ?„¤? •
	@Pointcut("within(com.firstzone.aop2.Calculator)")
	public void targetMethod3() {

	}

	// ì£¼ì—…ë¬? ?ˆ˜?–‰? „
	@Before("targetMethod3()")
	public void before(JoinPoint jp) {
		System.out.println("--------------- StopWatchAdvice before---------------");
		System.out.println("[StopWatchAdvice  ?•¨?ˆ˜?´ë¦?:  " + jp.getSignature().getName() + " ]");
		
	}

	// ì£¼ì—…ë¬´ì˜ ?ˆ˜?–‰ ?›„
	@After("targetMethod3()")
	public void after() {
		System.out.println("---------------StopWatchAdvice after---------------");
	}

	// ë¦¬í„´ ?›„?—
	@AfterReturning("targetMethod3()")
	public void afterReturn() {
		System.out.println("---------------StopWatchAdvice @AfterReturning---------------");
	}

	// ?•´?‹¹ ë©”ì„œ?“œ?—?„œ ?˜ˆ?™¸ ë°œìƒ ?‹œ ?‹¤?–‰
	@AfterThrowing("targetMethod3()")
	public void afterThrowing() {
		System.out.println("---------------StopWatchAdvice @AfterThrowing---------------");
	}

	// ì£¼ì—…ë¬´ì˜ ? „?›„?— ?ˆ˜?–‰
	@Around("targetMethod3()")
	public Object aroundTarget2(ProceedingJoinPoint joinPoint) throws Throwable {
		// ë³´ì¡°?—…ë¬?
		System.out.println("StopWatchAdvice:[ë©”ì„œ?“œ ?˜¸ì¶? ? „" + joinPoint.getSignature().getName());
		StopWatch watch = new StopWatch("ê³„ì‚°?‹œê°?");
		watch.start();
		// ì£¼ì—…ë¬´ë?? ?ˆ˜?–‰?•œ?‹¤.
		Object object = joinPoint.proceed();
		// ë³´ì¡°?—…ë¬?
		System.out.println("StopWatchAdvice:[ë©”ì„œ?“œ ?˜¸ì¶? ?›„" + joinPoint.getSignature().getName());
		watch.stop();
		System.out.println("ì£¼ì—…ë¬? ?ˆ˜?–‰ ?‹œê°?:" + watch.getTotalTimeMillis());
		System.out.println(watch.prettyPrint());
		return object;
	}

